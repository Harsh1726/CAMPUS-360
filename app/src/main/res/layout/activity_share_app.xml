<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareAppActivity">


    <TextView
        android:id="@+id/textViewShareApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Share App With The Link Given Below :-"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/textViewShareAppLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userapphyperlink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewShareApp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textViewShareApp"
        app:layout_constraintTop_toTopOf="@+id/textViewShareApp"
        app:layout_constraintVertical_bias="0.563"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>