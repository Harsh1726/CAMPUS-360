<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@drawable/mitujjainbuildfi">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#18000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_25"
                android:fontFamily="@font/poppins_bold2"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_44"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/inputEmail1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_24"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="@dimen/dim_24"
                android:background="@drawable/input_mitujjainloginfinall"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="@dimen/dim_10"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dim_20"
                android:paddingTop="@dimen/dim_13"
                android:paddingRight="@dimen/dim_20"
                android:paddingBottom="@dimen/dim_13"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/inputFullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/input_mitujjainloginfinall"
                android:drawableLeft="@drawable/picture1"
                android:drawablePadding="@dimen/dim_10"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/dim_20"
                android:paddingTop="@dimen/dim_13"
                android:paddingRight="@dimen/dim_20"
                android:paddingBottom="@dimen/dim_13"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/inputEmail1"
                app:layout_constraintStart_toStartOf="@id/inputEmail1"
                app:layout_constraintTop_toBottomOf="@id/inputEmail1" />

            <EditText
                android:id="@+id/inputUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/input_mitujjainloginfinall"
                android:drawableLeft="@drawable/picture1"
                android:drawablePadding="@dimen/dim_10"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/dim_20"
                android:paddingTop="@dimen/dim_13"
                android:paddingRight="@dimen/dim_20"
                android:paddingBottom="@dimen/dim_13"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/inputFullName"
                app:layout_constraintStart_toStartOf="@id/inputFullName"
                app:layout_constraintTop_toBottomOf="@id/inputFullName" />

            <EditText
                android:id="@+id/inputPassword1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/input_mitujjainloginfinall"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="@dimen/dim_10"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dim_20"
                android:paddingTop="@dimen/dim_13"
                android:paddingRight="@dimen/dim_20"
                android:paddingBottom="@dimen/dim_13"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/inputUsername"
                app:layout_constraintStart_toStartOf="@id/inputUsername"
                app:layout_constraintTop_toBottomOf="@id/inputUsername" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@drawable/input_mitujjainloginfinall"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_20"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/inputPassword1"
                app:layout_constraintStart_toStartOf="@id/inputPassword1"
                app:layout_constraintTop_toBottomOf="@id/inputPassword1" />

            <TextView
                android:id="@+id/alreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="60dp"
                android:text="Have an account?"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="@dimen/dim_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/loginRedirect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSignup"
                app:layout_constraintVertical_bias="0.533" />

            <TextView
                android:id="@+id/loginRedirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="test"
                android:text="LOG IN"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="@dimen/dim_20"
                app:layout_constraintBottom_toBottomOf="@+id/alreadyHaveAccount"
                app:layout_constraintEnd_toEndOf="@+id/btnSignup"
                app:layout_constraintStart_toEndOf="@+id/alreadyHaveAccount"
                app:layout_constraintTop_toTopOf="@+id/alreadyHaveAccount"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/registerToggleVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="SHOW"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/inputPassword1"
                app:layout_constraintEnd_toEndOf="@+id/inputPassword1"
                app:layout_constraintHorizontal_bias="0.978"
                app:layout_constraintStart_toStartOf="@+id/inputPassword1"
                app:layout_constraintTop_toTopOf="@+id/inputPassword1"
                app:layout_constraintVertical_bias="0.692" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

